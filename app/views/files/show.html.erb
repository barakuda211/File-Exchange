
<head>
  <ul>
    <h2><%= @file.filename %></h2>
    <h3>Content type: <%= @file.content_type %></h3>
    <h3>Size: <%= @size %></h3>
    <h3>Preview: <%= image_tag @file%></h3>
  </ul>
</head>

<p><%= link_to "Download", rails_blob_path(@file, disposition: "attachment") %></p>
<p><%= link_to "Delete", file_path(@file), data: {:confirm => 'Are you sure?'}, :method => :delete %></p>
<p><%= link_to "Home", root_path %></p>